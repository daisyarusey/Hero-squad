{{#partial "content"}}

    <h1 class="text-center bg-light mt-2">Heroes</h1>
    <div class="row">
    {{#if heroes}}
        {{#each heroes}}

            <div class="col-sm-4 text-center">
            <div class="card mb-4">
                <div class="card-body">
                <p class="card-text"> <span>{{name}}</span></p>
                    <a  href="/heroes/{{id}}" class="btn btn-primary">View Details</a>
                </div>
            </div>
            </div>

        {{/each}}
        </div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">
        <a class="btn btn-primary" href="/heroes/delete">Delete all heroes</a>
    </div>
    <div class="col-md-3">
        <a class="btn btn-primary"href="/heroes/new">Add another hero</a>
    </div>
    <div class="col-md-3"></div>
</div>
    {{else}}
        <a class="pl-5 text-white" id="fontsize" href="/heroes/new">No Heroes yet! Click to add a Hero</a>
    {{/if}}
{{/partial}}
{{>layout.hbs}}